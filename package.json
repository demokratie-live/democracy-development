{
  "name": "democracy-development",
  "version": "0.2.0",
  "main": "index.js",
  "repository": "https://github.com/demokratie-live/democracy-development.git",
  "author": "Manuel Ruck <m.ruck@democracy-deutschland.de>",
  "license": "Apache-2.0",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "lint": "lerna run lint",
    "test": "lerna run test --stream -- --verbose",
    "dev": "yarn build:k8s:local && skaffold dev --port-forward --status-check=false",
    "build:k8s:local": "kustomize build ./infra/kustomize/overlays/local > infra/local.yaml",
    "build:k8s:internal": "kustomize build ./infra/kustomize/overlays/internal > infra/internal.yaml",
    "build:k8s:alpha": "kustomize build ./infra/kustomize/overlays/alpha > infra/alpha.yaml",
    "build:k8s:prod": "kustomize build ./infra/kustomize/overlays/prod > infra/prod.yaml",
    "s:i:procedures": "cd services/cron-jobs/crawler && yarn && yarn dev",
    "s:i:conference-weeks": "cd services/cron-jobs/import-conference-week-details && yarn && yarn dev",
    "s:i:deputy-profiles": "cd services/cron-jobs/import-deputy-profiles && yarn && yarn dev",
    "s:i:named-poll-deputies": "cd services/cron-jobs/import-named-poll-deputies && yarn && yarn dev",
    "s:i:named-polls": "cd services/cron-jobs/import-named-polls && yarn && yarn dev",
    "s:i:plenary-mitutes": "cd services/cron-jobs/import-plenary-minutes && yarn && yarn dev",
    "s:i": "yarn s:i:procedures && yarn s:i:conference-weeks && yarn s:i:deputy-profiles && yarn s:i:named-poll-deputies && yarn s:i:named-polls && yarn s:i:plenary-mitutes",
    "s:parse-plenary-minutes": "cd services/cron-jobs/parse-plenary-minutes && yarn && yarn dev",
    "s:q:conference-weeks": "cd services/cron-jobs/queue-pushs-conference-week && yarn && yarn dev",
    "s:q:vote-conference-weeks": "cd services/cron-jobs/queue-pushs-vote-conference-week && yarn && yarn dev",
    "s:q:top-100": "cd services/cron-jobs/queue-pushs-vote-top-100 && yarn && yarn dev",
    "s:s:deputy-profiles": "cd services/cron-jobs/sync-deputy-profiles && yarn && yarn dev",
    "s:s:named-polls": "cd services/cron-jobs/sync-named-polls && yarn && yarn dev",
    "s:s:procedures": "cd services/cron-jobs/sync-procedures && yarn && yarn dev",
    "s:s": "yarn s:s:deputy-profiles && yarn s:s:named-polls && yarn s:s:procedures"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.28.4",
    "@typescript-eslint/parser": "^4.28.4",
    "eslint": "^7.31.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-prettier": "^3.4.0",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "typescript": "^4.3.5"
  }
}
